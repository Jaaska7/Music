<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backupload"
    tools:context=".View.UploadSongActivity">

    <TextView
        android:id="@+id/textViewSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Nombre de la canciÃ³n:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:hint="Escribe aqui:"
        android:textSize="15dp"
        android:layout_below="@+id/textViewSongName"
        android:id="@+id/editTextSongName"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/textViewSongName"
        android:id="@+id/buttonChooseFile"
        android:layout_width="wrap_content"
        android:background="@drawable/custom_search_view_background"
        android:layout_height="wrap_content"
        android:text="Seleccionar archivo MP3" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@id/buttonChooseFile"
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:background="@drawable/custom_search_view_background"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/BarraNavegacion"
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:background="@drawable/newsong"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/dashboard" />

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/Playlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/playlist" />

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/Albums"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/albums" />

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/CrearCanco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/upload" />

    </LinearLayout>


</RelativeLayout>
